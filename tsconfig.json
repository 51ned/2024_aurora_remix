{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noImplicitAny": true,
    "paths": {
      "hoc/*": ["app/hoc/*"],
      "hooks/*": ["app/hooks/*"],
      "lib/*": ["app/lib/*"],
      "public/*": ["public/*"],
      "stores/*": ["app/stores/*"],
      "styles/*": ["app/styles/*"],
      "views/*": ["app/views/*"],
      "utils/*": ["app/utils/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2021"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],  
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx"
  ]
}
